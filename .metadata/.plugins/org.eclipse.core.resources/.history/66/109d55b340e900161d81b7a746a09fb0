package multiThreading;

import java.util.ArrayList;
import java.util.List;

class ThreadPoolY{
	List<Connection> list = new ArrayList<Connection>();
	ThreadPoolY(){
		
	}
	
	public Connection getConnection(){
		Connection con = null;
		try{
			 synchronized(list){
				 while(list.isEmpty()){
					 list.wait();
				 }
				 return list.remove(0);
			 }
		}catch(InterruptedException e){
			
		}
		return con;
	}
	
}
class Connection{
	
}
